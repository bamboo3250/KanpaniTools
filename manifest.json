{
  "manifest_version": 2,
  "name": "KanpaniTools",
  "short_name": "KanpaniTools",
  "description": "Kanpani Girls Helper",
  "version": "1.13.3",

  "devtools_page": "devtools.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": { 
    "128": "icon.png" 
  },
  
  "background": {
    "scripts": [
      "lib/background.js"
    ]
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "activeTab",
    "http://pc-play.games.dmm.com/play/kanpani/",
    "http://www.dmm.com/netgame/foreign/-/enable-list/=/app_id=181259/"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
